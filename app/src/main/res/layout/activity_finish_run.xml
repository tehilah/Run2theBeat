<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishRunActivity">


    <TextView
        android:id="@+id/content_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Run Details"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/save_playlist_button"/>

    <Button
        android:id="@+id/save_playlist_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Save Playlist"
        android:textColorHighlight="@android:color/background_dark"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_cont"/>

    <FrameLayout
        android:id="@+id/playlist_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        app:layout_constraintTop_toBottomOf="@+id/save_playlist_button"
         />

</androidx.constraintlayout.widget.ConstraintLayout>