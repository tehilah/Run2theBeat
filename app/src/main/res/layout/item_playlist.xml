<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/button_round_corners_dark_blue"
    android:layout_marginTop="15dp">

    <ImageView
        android:id="@+id/image_of_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/playlist1"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/avg_bpm"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/avg_bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avg BPM"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/image_of_playlist"
        app:layout_constraintBottom_toTopOf="@+id/distance"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KM"
        android:textSize="14dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/avg_bpm"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>